{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["JWT_SECRET", "JWT_EXPIRES_IN", "REFRESH_JWT_EXPIRES_IN"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint", "^build"]
    },
    "test:int": {
      "dependsOn": ["build"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
